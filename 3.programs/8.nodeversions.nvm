#dotinstaller

function installModules {
  npm install tsc -g
  npm install gulp -g
  npm install forever -g
  npm install nodemon -g
  npm install pm2 -g
}

#v6.11.3
echo "source ${HOME}/.nvm/nvm.sh && nvm install -s v6.11.3" | bash
echo "source ${HOME}/.nvm/nvm.sh && nvm use v6.11.3" | bash
installModules
#v8.6.0
echo "source ${HOME}/.nvm/nvm.sh && nvm install -s v8.6.0" | bash
echo "source ${HOME}/.nvm/nvm.sh && nvm use v8.6.0" | bash
installModules
